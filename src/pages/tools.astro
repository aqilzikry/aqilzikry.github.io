---
import MetaHead from '@components/general/MetaHead.astro';
import BudgetCalculator from '@components/tools/BudgetCalculator.astro';
import ColorConverter from '@components/tools/ColorConverter.astro';
import JsonXmlValidator from '@components/tools/JsonXmlValidator.astro';
import Layout from '@layouts/Layout.astro';
---

<!doctype html>
<html lang='en'>
  <head>
    <MetaHead title={'Tools'} description={'Checkout these tools I made.'} ogImageUrl={'/assets/images/profile.png'} />
  </head>

  <body>
    <Layout>
      <h1 style='line-height: 1.2;' transition:animate='slide'>Tools</h1>

      <div class='grid grid-cols-1 md:grid-cols-2 gap-8'>
        <div class='bg-white dark:bg-dark-gray p-6 rounded-lg shadow-md'>
          <h2 class='text-2xl font-outfit mb-4 text-dark dark:text-light'>50/30/20 Budget Calculator</h2>
          <BudgetCalculator />
        </div>
        <div class='bg-white dark:bg-dark-gray p-6 rounded-lg shadow-md'>
          <h2 class='text-2xl font-outfit mb-4 text-dark dark:text-light'>Color Converter</h2>
          <ColorConverter />
        </div>
        <div class='bg-white dark:bg-dark-gray p-6 rounded-lg shadow-md md:col-span-2'>
          <h2 class='text-2xl font-outfit mb-4 text-dark dark:text-light'>JSON & XML Validator</h2>
          <JsonXmlValidator />
        </div>
      </div>
    </Layout>
  </body>
</html>
