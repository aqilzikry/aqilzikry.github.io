---
import { info } from '@data';
---

<a
  aria-label='Social Media'
  href={info.socialMedia.github}
  target='_blank'
  class='footer-icons group transition-all duration-300 ease-in-out hover:scale-110 hover:shadow-lg hover:shadow-blue-200/50 dark:hover:shadow-blue-900/50 hover:-translate-y-1 hover:border-blue-400 dark:hover:border-blue-500'
>
  <svg
    xmlns='http://www.w3.org/2000/svg'
    width='18'
    height='18'
    viewBox='0 0 24 24'
    stroke='currentColor'
    stroke-width='2'
    stroke-linecap='round'
    stroke-linejoin='round'
    class='feather feather-github group-hover:stroke-blue-500 transition-all duration-300 ease-in-out group-hover:scale-110 group-hover:rotate-3'
    ><path
      d='M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22'
    ></path>
  </svg>
</a>
<a
  aria-label='Social Media'
  href={info.socialMedia.linkedin}
  target='_blank'
  class='footer-icons group transition-all duration-300 ease-in-out hover:scale-110 hover:shadow-lg hover:shadow-blue-200/50 dark:hover:shadow-blue-900/50 hover:-translate-y-1 hover:border-blue-400 dark:hover:border-blue-500'
>
  <svg
    xmlns='http://www.w3.org/2000/svg'
    width='18'
    height='18'
    viewBox='0 0 24 24'
    fill='none'
    stroke='currentColor'
    stroke-width='2'
    stroke-linecap='round'
    stroke-linejoin='round'
    class='feather feather-linkedin group-hover:stroke-blue-500 transition-all duration-300 ease-in-out group-hover:scale-110 group-hover:rotate-3'
    ><path d='M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z'></path><rect
      x='2'
      y='9'
      width='4'
      height='12'></rect><circle cx='4' cy='4' r='2'></circle>
  </svg>
</a>
<a
  aria-label='Social Media'
  href={`mailto:${info.socialMedia.email}`}
  target='_blank'
  class='footer-icons group transition-all duration-300 ease-in-out hover:scale-110 hover:shadow-lg hover:shadow-blue-200/50 dark:hover:shadow-blue-900/50 hover:-translate-y-1 hover:border-blue-400 dark:hover:border-blue-500'
>
  <svg
    xmlns='http://www.w3.org/2000/svg'
    width='18'
    height='18'
    viewBox='0 0 24 24'
    fill='none'
    stroke='currentColor'
    stroke-width='2'
    stroke-linecap='round'
    stroke-linejoin='round'
    class='feather feather-mail group-hover:stroke-blue-500 transition-all duration-300 ease-in-out group-hover:scale-110 group-hover:rotate-3'
    ><path d='M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z'></path><polyline
      points='22,6 12,13 2,6'></polyline>
  </svg>
</a>
